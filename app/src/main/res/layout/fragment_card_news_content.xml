<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/card_news_content_layout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fave.android.alla.fragment.CardNewsItemFragment"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/card_news_content_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_news_bottom_gradation"
            />

        <TextView
            android:id="@+id/card_news_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/colorWhite"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="100dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                android:text="3/41"
                android:id="@+id/card_news_cnt_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSmall"
                android:textColor="@color/colorWhite"
                android:paddingLeft="20dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_chat"
                android:layout_marginLeft="170dp"/>

            <ImageView
                android:id="@+id/like_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_favorite_border"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_share"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

    </FrameLayout>

</layout>